# Supabase / Postgres configuration
# You can use DATABASE_URL (recommended) provided by Supabase
DATABASE_URL=postgresql://postgres:password@db.supabase.co:5432/postgres

# Alternatively define individual connection parts
DB_NAME=car_blog
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

# If your Postgres instance requires SSL (common with managed DBs), set DB_SSL to true
DB_SSL=true
# When using self-signed certs you can set the following to 'false' (not recommended)
DB_REJECT_UNAUTHORIZED=true

# Supabase-specific vars (if you want to use Supabase JS client elsewhere)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=public-anon-or-service-role-key

# Application
NODE_ENV=development
PORT=3000

# Security
JWT_SECRET=your_jwt_secret_key_here
BCRYPT_ROUNDS=10
