# Backend application configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173
CLIENT_URL=http://localhost:5173

# Security
JWT_SECRET=replace-with-strong-secret

# Primary database connection (Sequelize)
MYSQLDATABASE=car_blog
MYSQLUSER=root
MYSQLPASSWORD=
MYSQLHOST=localhost
MYSQLPORT=3306

# Alternate database configs (optional overrides per environment)
DB_NAME=car_blog
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306
DB_SSL=false

# Test database (optional)
TEST_DB_NAME=car_blog_test
TEST_DB_USER=root
TEST_DB_PASSWORD=
TEST_DB_HOST=localhost
TEST_DB_PORT=3306

# Email (generic SMTP fallback)
EMAIL_USER=
EMAIL_PASS=

# Zoho Mail service
ZOHO_MAIL_HOST=smtp.zoho.com
ZOHO_MAIL_PORT=465
ZOHO_MAIL_USER=
ZOHO_MAIL_PASSWORD=
ZOHO_MAIL_FROM=
ZOHO_MAIL_FROM_NAME=

# Gmail OAuth (if using Gmail service)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://developers.google.com/oauthplayground
GOOGLE_REFRESH_TOKEN=

# Third-party APIs
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Frontend environment variables (prefixed with VITE_)
VITE_REACT_APP_GOOGLE_MAPS_API_KEY=
